{
  "name": "mcp-sse-proxy",
  "version": "1.0.0",
  "description": "MCP proxy for SSE to Streamable HTTP or SSE to SSE",
  "main": "dist/proxy.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node --experimental-specifier-resolution=node dist/proxy.js",
    "start:sse-to-http": "node --experimental-specifier-resolution=node dist/proxy.js --input-mode sse --output-mode streamable",
    "start:sse-to-sse": "node --experimental-specifier-resolution=node dist/proxy.js --input-mode sse --output-mode sse",
    "start:http-to-http": "node --experimental-specifier-resolution=node dist/proxy.js --input-mode streamable --output-mode streamable",
    "start:http-to-sse": "node --experimental-specifier-resolution=node dist/proxy.js --input-mode streamable --output-mode sse",
    "dev": "tsx src/proxy.ts",
    "dev:sse-to-http": "tsx src/proxy.ts --input-mode sse --output-mode streamable",
    "dev:sse-to-sse": "tsx src/proxy.ts --input-mode sse --output-mode sse",
    "dev:http-to-http": "tsx src/proxy.ts --input-mode streamable --output-mode streamable",
    "dev:http-to-sse": "tsx src/proxy.ts --input-mode streamable --output-mode sse",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "mcp",
    "proxy",
    "sse",
    "streamable-http"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/eventsource": "^1.1.15",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.25",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.4",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "@types/axios": "^0.9.36",
    "@types/yargs": "^17.0.33",
    "axios": "^1.9.0",
    "chalk": "^5.4.1",
    "cors": "^2.8.5",
    "eventsource": "^4.0.0",
    "express": "^4.18.2",
    "yargs": "^17.7.2"
  }
}
